<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F9FA">




    <!-- Imagem de Fundo -->
    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Background image"
        android:scaleType="centerCrop"
        android:src="@drawable/fachada_ifam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tv_welcome_campus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:text="Bem Vindo ao Campus Zona Leste"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_background"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_main_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="265dp"
        android:text="Principais Locais"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_campus"
        tools:ignore="MissingConstraints" />

    <!-- Lista de Locais com Botões de Detalhes -->

    <!-- Lista de principais -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="292dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_locations"
        tools:ignore="MissingConstraints">
        <!--Item: Biblioteca-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#F0F0F0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">
            <!-- Ícone da biblioteca -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/local_library_24dp_5f6368_fill0_wght400_grad0_opsz24"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biblioteca"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aberto de 08:00 as 17:00"
                    android:textColor="#777777"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--Botão detalhes-->
            <Button
                android:id="@+id/btDetalhesBiblioteca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BDBBBB"
                android:text="Detalhes"
                android:textColor="#000000" />
        </LinearLayout>
        <!-- Item: CT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#F0F0F0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Centro de Treinamento"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aberto de 08:00 as 17:00"
                    android:textColor="#777777"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--Botão detalhes-->
            <Button
                android:id="@+id/btDetalhesCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BDBBBB"
                android:text="Detalhes"
                android:textColor="#000000" />
        </LinearLayout>
        <!-- Item: CT Aranoua -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#F0F0F0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Centro de Treinamento Aranoua"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aberto de 08:00 as 17:00"
                    android:textColor="#777777"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--Botão detalhes-->
            <Button
                android:id="@+id/btDetalhesCTAranoua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BDBBBB"
                android:text="Detalhes"
                android:textColor="#000000" />
        </LinearLayout>
        <!-- Item: CT Aranoua -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#F0F0F0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protocolo"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aberto de 08:00 as 17:00"
                    android:textColor="#777777"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--Botão detalhes-->
            <Button
                android:id="@+id/btDetalhesProtocolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#BDBBBB"
                android:text="Detalhes"
                android:textColor="#000000" />
        </LinearLayout>


    </LinearLayout>
    <!-- Botão "Próximo" -->
    <Button
        android:id="@+id/btProximo"
        android:layout_width="174dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#397016"
        android:text="Próximo"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>